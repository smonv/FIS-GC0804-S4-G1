<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <el-resolver>control.util.JsfCrudELResolver</el-resolver>
    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/welcomeJSF.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>categories</managed-bean-name>
        <managed-bean-class>control.CategoriesController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>categoriesJpa</managed-bean-name>
        <managed-bean-class>beans.CategoriesFacade</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>entities.Categories</converter-for-class>
        <converter-class>control.CategoriesConverter</converter-class>
    </converter>
    <navigation-rule>
        <navigation-case>
            <from-outcome>categories_create</from-outcome>
            <to-view-id>/categories/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>categories_list</from-outcome>
            <to-view-id>/categories/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>categories_edit</from-outcome>
            <to-view-id>/categories/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>categories_detail</from-outcome>
            <to-view-id>/categories/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>products</managed-bean-name>
        <managed-bean-class>control.ProductsController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>productsJpa</managed-bean-name>
        <managed-bean-class>beans.ProductsFacade</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>entities.Products</converter-for-class>
        <converter-class>control.ProductsConverter</converter-class>
    </converter>
    <navigation-rule>
        <navigation-case>
            <from-outcome>products_create</from-outcome>
            <to-view-id>/products/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>products_list</from-outcome>
            <to-view-id>/products/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>products_edit</from-outcome>
            <to-view-id>/products/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>products_detail</from-outcome>
            <to-view-id>/products/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
